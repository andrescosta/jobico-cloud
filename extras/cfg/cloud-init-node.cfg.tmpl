#cloud-config
preserve_hostname: false
manage_etc_hosts: false
ssh_pwauth: false
disable_root: false
users:
- name: debian
  hashed_passwd: {PWD_DEBIAN}
  sudo: ALL=(ALL) NOPASSWD:ALL
  shell: /bin/bash
  lock-passwd: false
  ssh_authorized_keys:
  {DEBIAN_KEYS}
- name: root
  hashed_passwd: {PWD_ROOT}
  sudo: ALL=(ALL) NOPASSWD:ALL
  shell: /bin/bash
  lock-passwd: false
  ssh_authorized_keys:
  {ROOT_KEYS}
packages:
  - wget
  - curl
  - openssl
  - socat 
  - conntrack 
  - ipset
write_files:
 - path: /etc/modules-load.d/k8s.conf
   content: |
    br_netfilter
 - path: /etc/systemd/resolved.conf.d/jobico.conf
   content: |
    [Resolve]
    DNS=192.168.122.23
    Domains=jobico.org
   permissions: '0644'
runcmd:
 - modprobe br_netfilter
 - systemctl restart systemd-resolved
